<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<TITLE>RightFlight Registration</TITLE>
</head>
<body style="font-family: Arial, Helvetica, sans-serif;
             background-color:#666;">
	<!--main-->
	<div style="width: 600px;
    			margin: 0 auto;">
    	<!--top-->
        <div style="padding: 10px 0 22px;
        			text-align: center;
                    color: #FFF;
                    font-size: 11px;
                    ">
        	<br/><br/>
        </div>
        <!--end top-->
        <!--header-->
        <div style="background-color: #FFF;
			        height: 85px;
			        padding: 0 20px">
            <!--logo-->
        	<a href="{{spath}}" style="width: 200px;
							   height: 61px;
                               float: left;
                               margin-top: 10px;
                               ">
            	RightFlight Site
            </a>
            <!--end logo-->
        </div>
        <!--end header-->
        <!--subject-->
        <div style="padding: 20px;
        			background-color: #fff;
                    font-size: 11px;
                    color: #838383;
                    ">
        	<h1 style=" font-size: 16px;
        				color: #000;
                        margin: 0 0 5px;">
        		RightFlight Registration
        	</h1>
            <p>{% trans %}Hello{% endtrans %} {{ user.username }}.</p>
			<p>{% trans %}Your confirmation url{% endtrans %} <a href="{{ confirmationUrl }}">{{ confirmationUrl }}</a></p>

        <!--clearfloat-->
        <div style="clear:both;
					height:0;
					font-size: 1px;
					line-height: 0px;
		            ">
    	</div>
        <!--end clearfloat-->
        </div>
        <!--end subjec-->

		<!--footer-->
        <div style="padding-bottom: 20px;
        			text-align: center;
                    color: #FFF;
                    font-size: 11px;
                    ">
            <div style="width: 283px;
            			height: 26px;
                        float: left;">
            </div>
            <div style="width: 256px;
            			height: 26px;
                        float: right;">
            </div>
            <!--clearfloat-->
	        <div style="clear:both;
						height:0;
						font-size: 1px;
						line-height: 0px;
			            ">
	    	</div>
	        <!--end clearfloat-->

			<br/>
        </div>
        <!--end footer-->
    </div>
    <!--end main-->
</body>
</html>